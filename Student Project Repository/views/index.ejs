  <title>Student Repository</title>
  <script>
    $(document).ready(function () {
      // SIGN IN
      $("#sbtn").click(function () {
        $("#signup").show();
        $("#signup").animate({
          opacity: '1'
        }, "slow");

        $("#login").animate({
          opacity: '0'
        }, "slow");
        $("#login").hide();
      });
      // BACK
      $("#bk").click(function () {
        $("#login").show();
        $("#signup").animate({
          opacity: '0'
        }, "slow");
        $("#login").animate({
          opacity: '1'
        }, "slow");
        $("#signup").hide();
      });

    });
  </script>

